<%- include('../partials/head', { title: 'Authentication Example' }) -%>
<%- include('../partials/navbar') -%>

<main style="display:inline-flex; width:100%">
    <% if (!locals.public) {%>
    <aside class="dashboard-sidebar" style="width:33%">
        <%- include('../partials/dashboard/dashboard-sidebar') -%>
    </aside>
    <main class="dashboard" style="width:66%">
    <% }%>
  
    <section class="matters" style="width:100%">
  
        <div class="container">
            <h1>Materias</h1>
            <% if (locals.message) { %>
                <%- message %>
            <% } %>
            <% if (!locals.public) {%>
            <div style="padding-bottom: 12px;">
                <form action="/matter" method="post">
                    <p>
                        <label for="name"> Titulo
                            <input type="text" id="name" name="name">
                        </label>
                    </p>
                    <p>
                        <label for="hierarchy"> Hierarquia
                            <select name="hierarchy" id="hierarchy">
                                <option value="0">Sem Hierarquia</option>
                                <% for(var i=0; i<matters.length; i++) {%>
                                    <option value="<%= matters[i].id %>"><%= matters[i].name %></option>
                                <% } %>
                            </select>
                        </label>
                    </p>
                    <p>
                        <!-- <label for="body"> Corpo
                            <textarea type="text" id="body htmeditor" name="body">
                                
                            </textarea>
                        </label> -->
                        <textarea class="htmeditor" name="body" id="body"></textarea>
                    </p>
                    <input type="submit" value="Enviar">
                </form>
            </div>
        <% } %>
        <% if (locals.matters) { %>
            <% for(var i=0; i<matters.length; i++) {%>
                <% if (matters[i].hierarchy == 0) { %>
                <article>
                    <form class="matters-manager" method="PUT" action="/matter/<%= matters[i].id%>">
                        <button type="button" class="hidden cancel-edit" onclick="toggleForm(this)">X</button>
                    
                            <h2 class="data name"><%= matters[i].name %></h2>
                            <input class="hidden" type="text" id="name" name="name" value="<%= matters[i].name %>">
                            <select name="hierarchy" class="hidden" id="hierarchy">
                                <option value="0">Sem HIerarquia</option>
                                <% for(var u=0; u<matters.length; u++) {%>
                                    <% if (matters[u].id == matters[i].hierarchy) { %>
                                    <option value="<%= matters[u].id %>" selected><%= matters[u].name %></option>
                                    <% } %>
                                    <% if (matters[u].id != matters[i].hierarchy) { %>
                                    <option value="<%= matters[u].id %>"><%= matters[u].name %></option>
                                    <% } %>

                                <% } %>
                            </select>

                            <div class="data body"><%- matters[i].body %></div>
                            <div class="data hidden">
                                <textarea class="htmeditor" id="body" name="body"><%= matters[i].body %></textarea>
                            </div>
                        

                        <% if (!locals.public) {%>
                        
                            
                            
                        
                            <div class="matters-manager-box">
                                
                                <button type="button" class="PUT" onclick="transformToEdit(this)">Editar</button>
                                <button type="button"class="DELETE"onclick="FormManager(this)"> Excluir</button>
                            </div>
                            <% } %>
                        <% for(var o=0; o<matters.length; o++) {%>
                            <% if(matters[i].id == matters[o].hierarchy) { %>
                            <article class="hierarchy">
                                <form class="matters-manager" method="PUT" action="/matter/<%= matters[i].id%>">
                                    <button type="button" class="hidden cancel-edit" onclick="toggleForm(this)">X</button>
                                    
                                        <h2 class="data title"><%= matters[i].title %></h2>
                                        <input class="hidden" type="text" id="name" name="name" value="<%= matters[i].name %>">
                                        <select name="hierarchy" class="hidden" id="hierarchy">
                                            <option value="0">Sem Hierarquia</option>
                                            <% for(var u=0; u<matters.length; u++) {%>
                                                <% if (matters[u].id == matters[i].hierarchy) { %>
                                                <option value="<%= matters[u].id %>" selected><%= matters[u].name %></option>
                                                <% } %>
                                                <% if (matters[u].id != matters[i].hierarchy) { %>
                                                <option value="<%= matters[u].id %>"><%= matters[u].name %></option>
                                                <% } %>
            
                                            <% } %>
                                        </select>
                                        <div class="data body"><%- matters[i].body %></div>
                                        <div class="data hidden">
                                            <textarea class="htmeditor" id="body" name="body"><%= matters[i].body %></textarea>
                                        </div>
                                    
                                    
                        <% if (!locals.public) {%>
                        
                            
                            
                        
                        <div class="matters-manager-box">
                            
                            <button type="button" class="PUT" onclick="transformToEdit(this)">Editar</button>
                            <button type="button"class="DELETE"onclick="FormManager(this)"> Excluir</button>
                        </div>
                        <% } %>
                        <% } %>
                           
                    </form>
                </article>
                        <% } %>
                    
                  
                    </form>
                </article>
                <% } %>
                
            <% } %>
            <% } %>
        </div>
        <% if (!locals.public) {%>
            <link href="/assets/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
            <script type="text/javascript" src="/assets/js/froala_editor.pkgd.min.js"></script>
            <script> 
                var editor = new FroalaEditor('.htmeditor');
            </script>
            <script src="/assets/js/FormManager.js"></script>
            <% } %>